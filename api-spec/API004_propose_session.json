        { "status": 400, "body": { "error": "missing_time", "message": "Date and time selection is required" } },
        { "status": 400, "body": { "error": "invalid_date", "message": "Session date must be in the future" } },
        { "status": 400, "body": { "error": "invalid_players", "message": "Invalid player count" } },
        { "status": 401, "body": { "error": "unauthorized", "message": "Authentication required" } }
      ]
    }
  ],
