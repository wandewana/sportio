{
  "ui_design": {
    "metadata": {
      "document_name": "Sportio UI System Design - Angular NativeScript",
      "version": "1.0",
      "created_date": "2025-11-29",
      "format": "AI-Agent Friendly JSON Specification",
      "platform": "Mobile (iOS/Android)",
      "framework": "Angular NativeScript"
    },
    "technology_stack": {
      "frontend_framework": "Angular NativeScript",
      "ui_components": "NativeScript UI Components",
      "navigation": "NativeScript Router",
      "state_management": "NgRx Store",
      "styling": "SCSS with NativeScript Theme",
      "icons": "NativeScript Font Icons",
      "maps": "NativeScript Google Maps Plugin",
      "charts": "NativeScript Charts Plugin",
      "push_notifications": "NativeScript Push Plugin",
      "camera": "NativeScript Camera Plugin",
      "geolocation": "NativeScript Geolocation Plugin"
    },
    "screen_architecture": {
      "overview": "Modular screen-based architecture with lazy loading",
      "screen_groups": {
        "authentication": {
          "description": "User authentication and onboarding",
          "screens": [
            "LoginScreen",
            "RegisterScreen",
            "ForgotPasswordScreen",
            "OnboardingScreen"
          ]
        },
        "session_discovery": {
          "description": "Finding and browsing sessions",
          "screens": [
            "HomeScreen",
            "SessionListScreen",
            "SessionDetailScreen",
            "MapViewScreen",
            "SearchScreen"
          ]
        },
        "session_management": {
          "description": "Creating and managing sessions",
          "screens": [
            "ProposeSessionScreen",
            "SessionLobbyScreen",
            "SessionWaitScreen",
            "SessionChatScreen"
          ]
        },
        "booking_flow": {
          "description": "Venue booking and payment",
          "screens": [
            "VenueSuggestScreen",
            "VenueDetailScreen",
            "BookingSlotScreen",
            "BookingConfirmScreen",
            "PaymentScreen"
          ]
        },
        "user_profile": {
          "description": "User profile and settings",
          "screens": [
            "ProfileScreen",
            "EditProfileScreen",
            "SettingsScreen",
            "NotificationSettingsScreen"
          ]
        },
        "notifications": {
          "description": "Notifications and alerts",
          "screens": [
            "NotificationsScreen",
            "NotificationDetailScreen"
          ]
        }
      }
    },
    "component_library": {
      "layout_components": {
        "TopBarComponent": {
          "description": "Header with navigation and actions",
          "properties": [
            "title: string",
            "showBackButton: boolean",
            "showMenuButton: boolean",
            "actions: ActionButton[]"
          ],
          "events": [
            "backPressed",
            "menuPressed",
            "actionSelected"
          ]
        },
        "BottomNavComponent": {
          "description": "Bottom navigation bar",
          "tabs": [
            {
              "id": "home",
              "label": "Home",
              "icon": "üè†",
              "route": "/home"
            },
            {
              "id": "map",
              "label": "Map",
              "icon": "üó∫Ô∏è",
              "route": "/map"
            },
            {
              "id": "propose",
              "label": "Create",
              "icon": "‚ûï",
              "route": "/propose"
            },
            {
              "id": "notifications",
              "label": "Alerts",
              "icon": "üîî",
              "route": "/notifications"
            },
            {
              "id": "profile",
              "label": "Profile",
              "icon": "üë§",
              "route": "/profile"
            }
          ]
        },
        "SearchBarComponent": {
          "description": "Search input with filtering",
          "properties": [
            "placeholder: string",
            "autoFocus: boolean",
            "showFilters: boolean"
          ],
          "events": [
            "searchChanged",
            "filterToggled"
          ]
        }
      },
      "data_components": {
        "SessionCardComponent": {
          "description": "Session listing card",
          "properties": [
            "session: Session",
            "showDistance: boolean",
            "showActionButton: boolean"
          ],
          "slots": [
            "sportIcon",
            "actionButton"
          ]
        },
        "VenueCardComponent": {
          "description": "Venue listing card",
          "properties": [
            "venue: Venue",
            "showPrice: boolean",
            "showRating: boolean"
          ]
        },
        "PlayerAvatarComponent": {
          "description": "Player avatar with initials",
          "properties": [
            "player: User",
            "size: 'small' | 'medium' | 'large'",
            "showStatus: boolean"
          ]
        },
        "MessageBubbleComponent": {
          "description": "Chat message bubble",
          "properties": [
            "message: Message",
            "isOwn: boolean",
            "showTimestamp: boolean"
          ]
        }
      },
      "form_components": {
        "SportSelectorComponent": {
          "description": "Sport type selection",
          "properties": [
            "selectedSport: string",
            "availableSports: Sport[]"
          ],
          "events": [
            "sportSelected"
          ]
        },
        "DateTimePickerComponent": {
          "description": "Date and time selection",
          "properties": [
            "selectedDate: Date",
            "selectedTime: string",
            "minDate: Date",
            "maxDate: Date"
          ],
          "events": [
            "dateTimeSelected"
          ]
        },
        "PlayerCountSelectorComponent": {
          "description": "Player count selection",
          "properties": [
            "selectedCount: number",
            "minPlayers: number",
            "maxPlayers: number"
          ],
          "events": [
            "countSelected"
          ]
        }
      },
      "action_components": {
        "PrimaryButtonComponent": {
          "description": "Primary action button",
          "properties": [
            "text: string",
            "loading: boolean",
            "disabled: boolean",
            "icon: string"
          ],
          "events": [
            "buttonPressed"
          ]
        },
        "SecondaryButtonComponent": {
          "description": "Secondary action button",
          "properties": [
            "text: string",
            "outline: boolean",
            "disabled: boolean"
          ],
          "events": [
            "buttonPressed"
          ]
        },
        "FloatingActionButtonComponent": {
          "description": "Floating action button",
          "properties": [
            "icon: string",
            "position: 'bottom-right' | 'bottom-left'",
            "visible: boolean"
          ],
          "events": [
            "buttonPressed"
          ]
        }
      }
    },
    "navigation_flow": {
      "authentication_flow": {
        "description": "User authentication and onboarding",
        "screens": [
          {
            "screen": "LoginScreen",
            "actions": [
              {
                "action": "loginSuccess",
                "next": "HomeScreen"
              },
              {
                "action": "registerPressed",
                "next": "RegisterScreen"
              },
              {
                "action": "forgotPassword",
                "next": "ForgotPasswordScreen"
              }
            ]
          },
          {
            "screen": "RegisterScreen",
            "actions": [
              {
                "action": "registerSuccess",
                "next": "HomeScreen"
              },
              {
                "action": "backPressed",
                "next": "LoginScreen"
              }
            ]
          }
        ]
      },
      "session_discovery_flow": {
        "description": "Finding and joining sessions",
        "screens": [
          {
            "screen": "HomeScreen",
            "actions": [
              {
                "action": "sessionSelected",
                "next": "SessionDetailScreen"
              },
              {
                "action": "mapViewPressed",
                "next": "MapViewScreen"
              },
              {
                "action": "proposeSessionPressed",
                "next": "ProposeSessionScreen"
              }
            ]
          },
          {
            "screen": "SessionDetailScreen",
            "actions": [
              {
                "action": "joinPressed",
                "next": "PlayerJoinScreen"
              },
              {
                "action": "chatPressed",
                "next": "SessionChatScreen"
              },
              {
                "action": "backPressed",
                "next": "HomeScreen"
              }
            ]
          }
        ]
      },
      "session_creation_flow": {
        "description": "Creating and managing sessions",
        "screens": [
          {
            "screen": "ProposeSessionScreen",
            "actions": [
              {
                "action": "sessionCreated",
                "next": "SessionLobbyScreen"
              },
              {
                "action": "backPressed",
                "next": "HomeScreen"
              }
            ]
          },
          {
            "screen": "SessionLobbyScreen",
            "actions": [
              {
                "action": "lockSessionPressed",
                "next": "VenueSuggestScreen"
              },
              {
                "action": "backPressed",
                "next": "HomeScreen"
              }
            ]
          }
        ]
      },
      "booking_flow": {
        "description": "Venue booking and payment",
        "screens": [
          {
            "screen": "VenueSuggestScreen",
            "actions": [
              {
                "action": "venueSelected",
                "next": "BookingSlotScreen"
              },
              {
                "action": "backPressed",
                "next": "SessionLobbyScreen"
              }
            ]
          },
          {
            "screen": "BookingSlotScreen",
            "actions": [
              {
                "action": "slotSelected",
                "next": "BookingConfirmScreen"
              },
              {
                "action": "backPressed",
                "next": "VenueSuggestScreen"
              }
            ]
          },
          {
            "screen": "BookingConfirmScreen",
            "actions": [
              {
                "action": "bookingConfirmed",
                "next": "PaymentScreen"
              },
              {
                "action": "backPressed",
                "next": "BookingSlotScreen"
              }
            ]
          }
        ]
      }
    },
    "ui_patterns": {
      "card_based_layout": {
        "description": "Cards for session and venue listings",
        "components": ["SessionCardComponent", "VenueCardComponent"],
        "usage": "HomeScreen, SessionListScreen, VenueSuggestScreen"
      },
      "floating_action_button": {
        "description": "Floating button for primary actions",
        "components": ["FloatingActionButtonComponent"],
        "usage": "Propose session, Quick actions"
      },
      "bottom_navigation": {
        "description": "Bottom tab navigation",
        "components": ["BottomNavComponent"],
        "usage": "Main app navigation"
      },
      "search_and_filter": {
        "description": "Search with filter options",
        "components": ["SearchBarComponent"],
        "usage": "Session discovery, Venue search"
      },
      "progressive_disclosure": {
        "description": "Step-by-step forms",
        "components": ["SportSelectorComponent", "DateTimePickerComponent", "PlayerCountSelectorComponent"],
        "usage": "Session creation, Booking flow"
      }
    },
